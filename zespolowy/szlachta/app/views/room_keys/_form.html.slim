= simple_form_for @room_key do |f|
  - if @room_key.errors.any?
    #error_explanation
      h2 = "#{pluralize(@room_key.errors.count, "error")} :"
      ul
        - @room_key.errors.full_messages.each do |message|
          li = message

  .form-inputs
    = f.association :room, label_method: :nazwa, value_method: :id, include_blank: false 
    = f.input :zapasowy, required: true, autofocus: true 
  tr
    td =f.button :submit, "PotwierdÅº" , :class => 'btn btn-primary'

    td = link_to 'Cofnij', :back, :class => 'btn btn-primary'
